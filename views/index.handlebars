<h1>Time to Eat Burgers!</h1>

<h2>Burgers to Consume</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    {{this.burger_name}}    
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    {{this.burger_name}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Order a New Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="newBurg">Burger Name:</label>
        <input type="text" id="newBurg" name="name">
    </div>

    <div class="form-group">
        <label for="devour">Eaten?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Ready to Eat
    </div>

    <button type="submit">Order Burger</button>
</form>