<h1>Time to Eat Burgers!</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6 burgerstoeat">
            <h2>Burgers to Consume</h2>

            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                {{this.burger_name}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 burgerseaten">
            <h2>Devoured Burgers</h2>

            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                {{this.burger_name}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-12">
            <div id="col-md-6 burgersorder">
                <h2>Order a New Burger</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="newBurg">Burger Name:</label>
                        <input type="text" id="newBurg" name="name">
                    </div>

                    <div class="form-group">
                        <label for="devour">Eaten?</label><br>
                        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                        <input type="radio" name="devoured" value="0"> Ready to Eat
                    </div>

                    <button type="submit" id="orderbutton">Order Burger</button>
                </form>
            </div>
        </div>
    </div>
</div>